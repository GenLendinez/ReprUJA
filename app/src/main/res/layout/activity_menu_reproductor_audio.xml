<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="charlskin.repruja.Menu_reproductor_audio">

    <ImageButton
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:id="@+id/boton_play"
        android:background="@drawable/play_64"

        android:layout_marginBottom="86dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:id="@+id/boton_siguiente"
        android:background="@drawable/next"
        android:layout_alignTop="@+id/boton_play"
        android:layout_toRightOf="@+id/boton_play"
        android:layout_toEndOf="@+id/boton_play"
        android:layout_marginLeft="37dp"
        android:layout_marginStart="37dp" />

    <ImageButton
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:id="@+id/boton_anterior"
        android:background="@drawable/previous"
        android:layout_alignTop="@+id/boton_play"
        android:layout_toLeftOf="@+id/boton_play"
        android:layout_toStartOf="@+id/boton_play"
        android:layout_marginRight="39dp"
        android:layout_marginEnd="39dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TituloCancion"
        android:id="@+id/campo_titulo"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/boton_anterior"
        android:layout_alignStart="@+id/boton_anterior"
        android:layout_alignRight="@+id/boton_siguiente"
        android:layout_alignEnd="@+id/boton_siguiente" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TituloArtista"
        android:id="@+id/campo_artista"
        android:layout_below="@+id/campo_titulo"
        android:layout_alignLeft="@+id/campo_titulo"
        android:layout_alignStart="@+id/campo_titulo"
        android:layout_alignRight="@+id/campo_titulo"
        android:layout_alignEnd="@+id/campo_titulo" />

</RelativeLayout>
